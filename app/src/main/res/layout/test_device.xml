<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <CheckBox
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:text="Enable data collection"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_marginLeft="40dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="45dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Set path:"
            android:id="@+id/textView"
            android:layout_below="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox" />

        <Spinner
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/pathSpin"
            android:layout_alignTop="@+id/textView"
            android:layout_alignEnd="@+id/cnlBtn"
            android:layout_marginLeft="70dp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="235dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
        android:layout_marginLeft="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Set distance:"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView" />

            <Spinner
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/distSpin"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignEnd="@+id/cnlBtn"
                android:layout_marginLeft="37dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nr. of sets:"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView" />

        <Spinner
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/setsSpin"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignEnd="@+id/cnlBtn"
            android:layout_marginLeft="53dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Set"
            android:id="@+id/setBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cnlBtn"
            android:layout_alignTop="@+id/setBtn"
            android:layout_toEndOf="@+id/setBtn"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="40dp" />

    </LinearLayout>






</LinearLayout>
